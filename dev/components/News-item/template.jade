if data
	article.News-item(id=''+data.id)
		div.News-itemLight
			figure.News-imageContainer
				img.News-image--circle(src=''+data.image, alt=''+data.title)
			h4.News-itemTitle
				|	#{data.title}
		div.News-itemFull
			figure.News-imageContainer
				img.News-image(src=''+data.image, alt=''+data.title)
			div.News-right
				h3.News-itemTitle
					|	#{data.title}
				p.News-description
					|	#{data.content}

else
	article.News-item(id='#{id}')
		div.News-itemLight
			figure.News-imageContainer
				img.News-image--circle(src='#{image}', alt='#{title}')
			h4.News-itemTitle
				|	#{title}
		div.News-itemFull
			figure.News-imageContainer
				img.News-image(src='#{image}', alt='#{title}')
			div.News-right
				h3.News-itemTitle
					|	#{title}
				p.News-description
					|	#{content}