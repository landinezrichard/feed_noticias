$loader_width= 250px
$loader_dot_size= 20px

.Loader
	height $loader_dot_size
	width $loader_width
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	margin auto
	
	&-container
		height 100vh
		width 100vw

	&-dot
		animation-name loader
		animation-duration 3s
		animation-timing-function ease-in-out
		animation-iteration-count infinite
		// animation 3s loader ease-in-out infinite
		height $loader_dot_size 
		width $loader_dot_size 
		border-radius 100%
		background-color black
		position absolute
		border 2px solid white

		&:first-child
			background-color #8cc759
			animation-delay 0.5s

		&:nth-child(2)
			background-color $lime
			animation-delay 0.4s

		&:nth-child(3)
			background-color $naranja_header
			animation-delay 0.3s

		&:nth-child(4)
			background-color #f9a74b
			animation-delay 0.2s

		&:nth-child(5)
			background-color #60beeb
			animation-delay 0.1s

		&:nth-child(6)
			background-color $turquesa
			animation-delay 0s

	&-text
		position absolute
		top 200%
		left 0
		right 0
		width 4rem
		margin auto
		color $white

		&:after
			content "Cargando"
			font-weight bold
			animation 3s loading-text infinite

@keyframes loader {
	15% {transform: translateX(0);}
	45% {transform: translateX( 230px );}
	65% {transform: translateX( 230px );}
	95% {transform: translateX(0);}
}
	
@keyframes loading-text
	0%
		content "Cargando"

	25%
		content "Cargando."

	50%
		content "Cargando.."

	75%
		content "Cargando..."